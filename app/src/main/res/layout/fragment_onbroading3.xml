<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnbroadingFragment3"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/slide3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi vọng S YADO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sẽ đem lại lợi ích, trải nghiệm tốt cho bạn"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"

        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãy nhanh chóng sử dụng S YADO để tìm cho mình một chiếc trọ xịn sò nào ^^"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"

        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Được rồi đi thôi"

        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"

        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"

        android:textSize="18sp"
        android:backgroundTint="#059392"
        android:text="GET START"/>

</LinearLayout>